{
  "name": "Media Downloader Dev",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "main.py"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "if [ -f packages.txt ]; then sudo apt-get update && sudo apt-get install -y $(cat packages.txt); fi && if [ -f requirements.txt ]; then python -m venv venv && source venv/bin/activate && pip install -r requirements.txt; fi",

  "postAttachCommand": {
    "streamlit": "venv/bin/streamlit run main.py --server.enableCORS false --server.enableXsrfProtection false --server.port 8501"
  },

  "portsAttributes": {
    "8501": {
      "label": "Streamlit UI",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [
    8501
  ]
}